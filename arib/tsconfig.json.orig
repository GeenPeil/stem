{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "es2015", "dom" ],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "dist"
	},
	"formatCodeOptions": {
		"convertTabsToSpaces": false
	},
	"exclude": [
		"node_modules"
	],
	"atom": {
		"formatOnSave": true
	}
}
